	<!-- Déclaration des frameworks utilisés pour ne pas avoir à changer leurs @import -->
	<chemin path="./css/frameworks/tinytypo" type="public" />
	<chemin path="./css/frameworks/bourbon" type="public" />
	<chemin path="./css/frameworks/neat" type="public" />
	<chemin path="./css/frameworks/layoutgala" type="public" />
